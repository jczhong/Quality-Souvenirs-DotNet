@page
@model QualitySouvenirs.Areas.Identity.Pages.Account.Manage.Souvenirs.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Identity/Pages/Account/Manage/_Layout.cshtml";
}

<h2>Souvenirs</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Souvenir[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Souvenir[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Souvenir[0].Popularity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Souvenir[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Souvenir[0].Supplier)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Souvenir) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Popularity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
