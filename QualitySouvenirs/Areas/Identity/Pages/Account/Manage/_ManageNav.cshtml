@using QualitySouvenirs.Models
@using QualitySouvenirs.Share
@inject UserManager<AppUser> UserManager
@{
    var _user = await UserManager.GetUserAsync(User);
}

<ul class="nav nav-pills nav-stacked">
    <li class="@ManageNavPages.OrdersNavClass(ViewContext)"><a asp-area="Identity" asp-page="/Account/Manage/Orders/Index">Orders</a></li>
    @if (await UserManager.IsInRoleAsync(_user, Roles.Admin))
    {
        <li class="@ManageNavPages.CustomersNavClass(ViewContext)"><a asp-area="Identity" asp-page="/Account/Manage/Customers/Index">Customers</a></li>
        <li class="@ManageNavPages.SouvenirsClass(ViewContext)"><a asp-area="Identity" asp-page="/Account/Manage/Souvenirs/Index">Souvenirs</a></li>
        <li class="@ManageNavPages.SuppliersNavClass(ViewContext)"><a asp-area="Identity" asp-page="/Account/Manage/Suppliers/Index">Suppliers</a></li>
        <li class="@ManageNavPages.CategoriesNavClass(ViewContext)"><a asp-area="Identity" asp-page="/Account/Manage/Categories/Index">Categories</a></li>
    }
    <li class="@ManageNavPages.IndexNavClass(ViewContext)"><a asp-page="/Account/Manage/Index">Profile</a></li>
    <li class="@ManageNavPages.ChangePasswordNavClass(ViewContext)"><a id="change-password" asp-area="Identity" asp-page="/Account/Manage/ChangePassword">Password</a></li>
</ul>
